    , cborg
    , cardano-binary
    , mtl
    , kuber

executable  market-cli
  main-is:  Main.hs
  hs-source-dirs: marketplace-cli
  build-depends:
      base -any
    , marketplace-core

benchmark bench-parallel
  type:                 exitcode-stdio-1.0
  hs-source-dirs:       benchmark-parallel
  Main-is:              ParallelBench.hs
  default-language:    Haskell2010
  other-modules: 
                       ParallelUtils
  build-depends:        base
                        , cardano-api
                        , text
                        , containers
                        , criterion
                        , plutus-tx
                        , cborg
                        , cardano-binary
                        , mtl
                        , split
                        , clock
                        , async
                        , cardano-ledger-core
                        , random
                        , kuber
                        , marketplace-core
                        , marketplace-plutus
                        , plutus-ledger-api
                        , plutus-tx
                        , directory
                        , random-shuffle
                        , bytestring


